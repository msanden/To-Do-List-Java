{{#partial "content"}}

    <p>Description: {{ task.description }}</p>
    <p>Category: {{ category.name }}</p>
    <p>Created At: {{ task.createdAt }}</p>
    <p>Task status:
        {{#if task.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> InComplete
        {{/if}}
    </p>
    <ul><a href="/tasks/{{task.id}}/edit">Edit Task</a> </ul>
    <ul><a href="/categories/{{task.categoryId}}/tasks/{{task.id}}/delete">Delete Task </a> </ul>


{{/partial}}

{{> layout.hbs}}